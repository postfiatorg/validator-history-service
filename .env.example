# Validator History Service Configuration Template
# Copy this file to .env and fill in your values
# Or use a pre-configured file: cp .env.devnet .env

# Node Environment
NODE_ENV=development

# Database Configuration
DB_CLIENT=pg
DB_HOST=localhost
DB_USER=vhs_user
DB_PASSWORD=vhs_password
DB_DATABASE=validator_history_db
ACQUIRE_CONNECTION_TIMEOUT=

# Network Configuration
# Entry point for the network crawler (hostname without https://)
MAINNET_P2P_ENTRY=

# Rippled node with admin RPC access (for validators command)
RIPPLED_RPC_ADMIN=

# Network identifier: dev, test, or main
NETWORK_ID=

# Optional: MaxMind GeoIP (for geolocation features)
# Get keys from https://dev.maxmind.com/geoip/geoip2/geolite2/
MAXMIND_USER=
MAXMIND_KEY=
